#include <stdio.h>

int main(void) {
  int opcao;
  do{
    printf("\nMenu principal\n");
    printf("1 - Criar tarefa\n");
    printf("2 - Deletar tarefa\n");
    printf("3 - Listar tarefa\n");
    printf("0 - Sair\n");
    printf("Escolha uma opção: ");
    scanf("%d", &opcao);
    printf("Opção escolhida: %d\n", opcao);
  }while(opcao != 0);
}
